//- Grouping overlay
.modal.fade#groupModal(role="dialog")
		.modal-dialog.modal-lg
			.modal-content
				.modal-header
					button.close(type="button",data-dismiss="modal>&times")
					h4.modal-title #{loc.qa_component_details.groupingOverlay}
				.modal-body.cg-modal-body.container
					.row
						form
							.form-group.col-md-1.col-sm-1.col-xs-1
							.form-group.col-md-4.col-sm-4.col-xs-4
								label(for="origGroupList") #{loc.qa_component_details.groupingOverlayLeft}
								ul#origGroupList.form-control.cg-select.connectedSortable
							.form-group.col-md-2.col-sm-2.col-xs-1
								.cg-select
									button#sendRightBtn.btn.btn-primary.center-block.cg-first-btn
										i.glyphicon.glyphicon-arrow-right
									button#sendAllRightBtn.btn.btn-primary.center-block.cg-other-btn
										i.glyphicon.glyphicon-fast-forward
									button#sendLeftBtn.btn.btn-primary.center-block.cg-other-btn
										i.glyphicon.glyphicon-arrow-left
									button#sendAllLeftBtn.btn.btn-primary.center-block.cg-other-btn
										i.glyphicon.glyphicon-fast-backward
							.form-group.col-md-4.col-sm-4.col-xs-4
								label(for="modifiedGroupList") #{loc.qa_component_details.groupingOverlayRight}
								ul#modifiedGroupList.form-control.cg-select.connectedSortable
							.form-group.col-md-1.col-sm-1.col-xs-1
								button#moveUpRight.btn.btn-primary.center-block.cg-second-btn
									i.glyphicon.glyphicon-arrow-up
								button#moveDownRight.btn.btn-primary.center-block.cg-second-btn
									i.glyphicon.glyphicon-arrow-down

				.modal-footer
					button.btn.btn-default#saveBtn(type="button", disabled = 'false',data-dismiss="modal") #{loc.qa_component_details.saveGrouping}
					button.btn.btn-default(type="button",data-dismiss="modal") #{loc.qa_component_details.closeGrouping}